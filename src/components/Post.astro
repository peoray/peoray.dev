---
const { post } = Astro.props
const { title, description, path, date, minutesRead } = post
---

<a
  href={`${path}`}
  rel="prefetch"
  class="flex flex-col gap-y-3 bg-background-tertiary hover:bg-background-secondary p-4 mb-6 transition-all rounded-xl text-copy-primary hover:text-copy-primary ease-out"
>
  <h2 class="!text-purple-100 text-2xl font-bold">{title}</h2>

  <p class="text-xl">{description}</p>

  <div class="flex items-center gap-x-2">
    <time>
      {
        new Date(date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
        })
      }
    </time>

    <span>â€¢</span>

    {minutesRead && <span>{minutesRead}</span>}
  </div>
</a>

