---
interface Props {
  link: string
  classes?: string
}
const { link, classes, ...rest } = Astro.props
---

<!-- target="_blank" -->
<a
  rel="nofollow noopener noreferrer"
  href={link}
  class:list={[
    'inline-block hover:bg-purple-200 hover:text-white px-4 py-2 rounded-full text-sm',
    classes,
  ]}
  {...rest}
>
  <slot />
</a>
