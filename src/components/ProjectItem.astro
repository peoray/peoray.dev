---
import Badge from './Badge.astro';

// interface Props {
//   project: string;
//   source: string;
//   description: string;
// }

const { project } = Astro.props;
---

<div
	class='h-auto flex flex-col justify-between border border-neutral-700 bg-background-tertiary hover:scale-105 ease-out transition-transform p-4 rounded-xl'
>
	<div class='flex flex-col space-y-2'>
		<h2 class='text-xl font-bold text-purple-100'>{project.title}</h2>
		<p class='text-md text-neutral-200/80'>{project.description}</p>
	</div>

	<div class='flex space-x-4 mt-4'>
		{
			project.source && (
				<Badge classes='bg-transparent border' link={project.source}>
					Source
				</Badge>
			)
		}
		{
			project.demo && (
				<Badge classes='bg-transparent border' link={project.demo}>
					Demo
				</Badge>
			)
		}
		{
			project.website && (
				<Badge classes='bg-transparent border' link={project.website}>
					Website
				</Badge>
			)
		}
		{
			project.article && (
				<Badge classes='bg-transparent border' link={project.article}>
					Article
				</Badge>
			)
		}
	</div>
</div>
